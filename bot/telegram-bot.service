[Unit]
Description=Telegram Bot Service
After=network.target

[Service]
Type=simple
User=roman
Group=roman
WorkingDirectory=/opt/telegram-bot/bot
Environment=PATH=/opt/telegram-bot/bot/venv/bin
ExecStart=/opt/telegram-bot/bot/venv/bin/python3 bot.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
