[Unit]
Description=Telegram Bot Service with Health Check and Port Cleanup
After=network.target
Wants=network.target

[Service]
Type=simple
User=roman
Group=roman
WorkingDirectory=/opt/telegram-bot/bot
Environment=PATH=/opt/telegram-bot/bot/venv/bin
Environment=PYTHONPATH=/opt/telegram-bot/bot/venv/lib/python3.12/site-packages
Environment=HEALTH_CHECK_PORT=8081
ExecStartPre=/opt/telegram-bot/bot/cleanup_ports.sh
ExecStart=/opt/telegram-bot/bot/venv/bin/python3 run_with_health.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/opt/telegram-bot/bot

[Install]
WantedBy=multi-user.target
